  // 4. Crie uma função chamada classificarIngresso que retorna o tipo com base na idade
  function classificarIngresso() {
    if (idade < 12) {
      return "Infantil";
    } else if (idade >= 12 && idade <= 17) {
      return "Adolescente";
    } else if (idade >= 18 && idade <= 59) {
      return "Adulto";
    } else {
      return "Sênior";
    }
  }
  
